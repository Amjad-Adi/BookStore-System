<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1100.0"
            style="-fx-background-color: linear-gradient(to bottom right, #0F172A, #111827);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.database.RegisterController">

    <center>
        <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

            <!-- LEFT: FORM CARD -->
            <VBox prefWidth="460.0" spacing="18.0"
                  style="-fx-background-color: rgba(255,255,255,0.96); -fx-background-radius: 18;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0.2, 0, 6);">
                <padding><Insets top="26" right="26" bottom="26" left="26"/></padding>

                <VBox spacing="6.0">
                    <Label text="Create Account"
                           style="-fx-text-fill:#111827; -fx-font-size:26px; -fx-font-weight:900;"/>
                    <Label text="Join our bookstore and start your reading journey."
                           style="-fx-text-fill:#6B7280; -fx-font-size:13px;"/>
                </VBox>

                <Separator opacity="0.25"/>

                <HBox spacing="14.0">
                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                        <Label text="First Name *" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                        <TextField fx:id="firstNameField"
                                   style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                          -fx-border-color:#E5E7EB; -fx-padding:10 12; -fx-text-fill:#111827;"/>
                    </VBox>
                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                        <Label text="Second Name *" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                        <TextField fx:id="secondNameField"
                                   style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                          -fx-border-color:#E5E7EB; -fx-padding:10 12; -fx-text-fill:#111827;"/>
                    </VBox>
                </HBox>

                <VBox spacing="6.0">
                    <Label text="Email *" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                    <TextField fx:id="emailField" promptText="name@example.com"
                               style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                      -fx-border-color:#E5E7EB; -fx-padding:10 12; -fx-text-fill:#111827;"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Password *" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                    <PasswordField fx:id="passwordField" promptText="Choose a strong password"
                                   style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                          -fx-border-color:#E5E7EB; -fx-padding:10 12; -fx-text-fill:#111827;"/>
                </VBox>

                <HBox spacing="14.0">
                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                        <Label text="Birth Date" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                        <DatePicker fx:id="birthDatePicker" prefWidth="9999.0"
                                    style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                           -fx-border-color:#E5E7EB; -fx-padding:2 6;"/>
                    </VBox>
                    <VBox spacing="6.0" HBox.hgrow="ALWAYS">
                        <Label text="Profession" style="-fx-text-fill:#374151; -fx-font-weight:800;"/>
                        <ComboBox fx:id="professionCombo" prefWidth="9999.0"
                                  style="-fx-background-color:#F3F4F6; -fx-background-radius:12; -fx-border-radius:12;
                                         -fx-border-color:#E5E7EB; -fx-padding:4 6;"/>
                    </VBox>
                </HBox>

                <Button text="Create Account" maxWidth="1.7976931348623157E308"
                        onAction="#onCreateAccount"
                        style="-fx-background-color:#F59E0B; -fx-text-fill:#111827; -fx-font-weight:900;
                               -fx-font-size:14px; -fx-background-radius:12; -fx-padding:12 14;"/>

                <HBox alignment="CENTER" spacing="6.0">
                    <Label text="Already have an account?" style="-fx-text-fill:#6B7280;"/>
                    <Hyperlink text="Login" onAction="#onGoLogin"
                               style="-fx-text-fill:#F59E0B; -fx-font-weight:900;"/>
                </HBox>

                <Label fx:id="statusLabel" style="-fx-text-fill:#111827; -fx-font-weight:700;"/>
            </VBox>

            <!-- RIGHT: IMAGE PANEL -->
            <VBox alignment="CENTER" prefWidth="420.0" spacing="14.0"
                  style="-fx-background-color: rgba(255,255,255,0.08); -fx-background-radius:18;
                         -fx-border-color: rgba(255,255,255,0.10); -fx-border-radius:18; -fx-border-width:1;">
                <padding><Insets top="22" right="22" bottom="22" left="22"/></padding>

                <ImageView fitHeight="384.0" fitWidth="374.0" preserveRatio="true">
                    <Image url="@Images/Registeration_Image.png"/>
                </ImageView>

                <VBox alignment="CENTER" spacing="6.0">
                    <Label text="Your Next Book Awaits"
                           style="-fx-text-fill:#F9FAFB; -fx-font-size:22px; -fx-font-weight:900;"/>
                    <Label text="Read together, learn faster, and stay inspired."
                           maxWidth="340" wrapText="true" textAlignment="CENTER"
                           style="-fx-text-fill: rgba(249,250,251,0.75); -fx-font-size:13px;"/>
                </VBox>
            </VBox>

        </HBox>
    </center>
</BorderPane>
