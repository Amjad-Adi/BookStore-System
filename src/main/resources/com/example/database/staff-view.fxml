<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.database.Staff.StaffController"
      spacing="12"
      style="-fx-background-color: transparent;">

    <!-- Top bar: Search -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color:#020617; -fx-border-color:#1e293b; -fx-border-radius:14; -fx-background-radius:14;">
        <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

        <Label text="Search by" style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>

        <ComboBox fx:id="searchByCombo" prefWidth="160"
                  style="-fx-background-color:white; -fx-border-color:#e5e7eb; -fx-border-radius:10; -fx-background-radius:10;"/>

        <TextField fx:id="searchField" promptText="Type here..."
                   style="-fx-background-color:#020617; -fx-text-fill:#e5e7eb; -fx-prompt-text-fill:#64748b;
                          -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;
                          -fx-padding:10 12;"
                   HBox.hgrow="ALWAYS"/>

        <Button text="Search" onAction="#onSearch"
                style="-fx-background-color:#2563eb; -fx-text-fill:white; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:10 14;"/>

        <Button text="Refresh" onAction="#onRefresh"
                style="-fx-background-color:#334155; -fx-text-fill:#e5e7eb; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:10 14;"/>

        <Button text="Clear" onAction="#onClear"
                style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb; -fx-font-weight:900;
                       -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10; -fx-padding:10 14;"/>
    </HBox>

    <!-- Main content -->
    <HBox spacing="12" VBox.vgrow="ALWAYS">

        <!-- LEFT: TABLE -->
        <VBox spacing="10" HBox.hgrow="ALWAYS"
              style="-fx-background-color:#020617; -fx-border-color:#1e293b; -fx-border-radius:14; -fx-background-radius:14;">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Staff" style="-fx-text-fill:#f8fafc; -fx-font-size:16px; -fx-font-weight:900;"/>
                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Insert" onAction="#onInsert"
                        style="-fx-background-color:#16a34a; -fx-text-fill:white; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:8 12;"/>
                <Button text="Update" onAction="#onUpdate"
                        style="-fx-background-color:#f59e0b; -fx-text-fill:#111827; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:8 12;"/>
                <Button text="Delete" onAction="#onDelete"
                        style="-fx-background-color:#ef4444; -fx-text-fill:white; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:8 12;"/>
                <Button text="Toggle Status" onAction="#onToggleStatus"
                        style="-fx-background-color:#0ea5e9; -fx-text-fill:#081018; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:8 12;"/>
            </HBox>

            <TableView fx:id="staffTable" VBox.vgrow="ALWAYS" styleClass="dark-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                    <TableColumn fx:id="colFirstName" text="First Name" prefWidth="140"/>
                    <TableColumn fx:id="colLastName" text="Last Name" prefWidth="140"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="230"/>
                    <TableColumn fx:id="colSalary" text="Salary" prefWidth="110"/>
                    <TableColumn fx:id="colBirthDate" text="Birth" prefWidth="120"/>
                    <TableColumn fx:id="colHireDate" text="Hire" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="110"/>
                </columns>
            </TableView>

            <Label fx:id="statusLabel" text=""
                   style="-fx-text-fill:#38bdf8; -fx-font-size:12px; -fx-font-weight:800;"/>
        </VBox>

        <!-- RIGHT: FORM -->
        <VBox spacing="10" prefWidth="360"
              style="-fx-background-color:#020617; -fx-border-color:#1e293b; -fx-border-radius:14; -fx-background-radius:14;">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <Label text="Details" style="-fx-text-fill:#f8fafc; -fx-font-size:16px; -fx-font-weight:900;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="90" prefWidth="90"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="ID" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                  -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="First" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                  -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Last" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                  -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Email" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                  -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Pass" GridPane.rowIndex="4" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                               style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                      -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Salary" GridPane.rowIndex="5" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <TextField fx:id="salaryField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                           promptText="e.g. 1200.0"
                           style="-fx-background-color:#0b1220; -fx-text-fill:#e5e7eb;
                                  -fx-border-color:#1e293b; -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Birth" GridPane.rowIndex="6" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <DatePicker fx:id="birthDatePicker" GridPane.rowIndex="6" GridPane.columnIndex="1"
                            style="-fx-background-color:#0b1220; -fx-border-color:#1e293b;
                                   -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Hire" GridPane.rowIndex="7" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <DatePicker fx:id="hireDatePicker" GridPane.rowIndex="7" GridPane.columnIndex="1"
                            style="-fx-background-color:#0b1220; -fx-border-color:#1e293b;
                                   -fx-border-radius:10; -fx-background-radius:10;"/>

                <Label text="Status" GridPane.rowIndex="8" GridPane.columnIndex="0"
                       style="-fx-text-fill:#94a3b8; -fx-font-weight:800;"/>
                <ComboBox fx:id="statusCombo" GridPane.rowIndex="8" GridPane.columnIndex="1"
                          style="-fx-background-color:white; -fx-border-color:#e5e7eb; -fx-border-radius:10; -fx-background-radius:10;"/>
            </GridPane>

            <Separator opacity="0.25"/>

            <HBox spacing="10">
                <Button fx:id="confirmBtn" text="Confirm" onAction="#onConfirm"
                        maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"
                        style="-fx-background-color:#2563eb; -fx-text-fill:white; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:10 14;"/>
                <Button fx:id="cancelBtn" text="Cancel" onAction="#onCancel"
                        maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"
                        style="-fx-background-color:#334155; -fx-text-fill:#e5e7eb; -fx-font-weight:900; -fx-background-radius:10; -fx-padding:10 14;"/>
            </HBox>
        </VBox>

    </HBox>
</VBox>
